<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CounterArkadiusz4F.Views.AllCountersPage"
             Title="Counters"
             xmlns:models="clr-namespace:CounterArkadiusz4F.Models"
             x:DataType="models:AllCounters">

    <VerticalStackLayout>
        <CollectionView 
            ItemsSource="{Binding Counters}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Counter">
                    <HorizontalStackLayout 
                        Margin="10"
                        Spacing="20">
                        <Label 
                            Text="{Binding Name}" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" />
                        <Label 
                            Text="{Binding Value}" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" />
                        <Button
                            Text="-"
                            Clicked="SubtractButtonClicked"/>
                        <Button
                            Text="+"
                            Clicked="AddButtonClicked"/>

                    </HorizontalStackLayout>
                </DataTemplate>
                
            </CollectionView.ItemTemplate>
       
        </CollectionView>
        <Label
            Text="Dodawanie licznika"/>
        <Label 
            Text="Nazwa Licznika "/>
        <Entry
            x:Name="CounterNameEntry"
            ClearButtonVisibility="WhileEditing"
            Text="Mój Licznik"
            Placeholder="Nazwa Licznika"
            />
        <Label 
        Text="Wartość Początkowa: "/>
        <Entry
            x:Name="InitialValueEntry"
            ClearButtonVisibility="WhileEditing"
            Text="10"
            Placeholder="Wartość Początkowa"
        />
        <Button
            Text="Dodaj licznik"
            Clicked="NewCounterButtonClicked"/>

    </VerticalStackLayout>
</ContentPage>